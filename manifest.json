{
    "name": "Me Talk Pretty",
    "description": "Base Level Extension",
    "version": "1.0",
    "default_locale": "en",
    "manifest_version": 3,
    "action": {
      "default_icon": {
        "16": "newtab_search16.png",
        "32": "newtab_search32.png",
        "48": "newtab_search48.png",
        "128": "newtab_search128.png"
      }
    },
      "icons": {
        "16": "newtab_search16.png",
        "32": "newtab_search32.png",
        "48": "newtab_search48.png",
        "128": "newtab_search128.png"
      },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content_script.js"]
      }
    ],
    "permissions": [
      "contextMenus",
      "activeTab",
      "storage"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "omnibox": { "keyword": "nt" },
  "options_page": "options.html",
  "commands": {
    "displayHighlightedText": {
      "suggested_key": {
        "default": "Alt+O"
      },
      "description": "Display Highlighted Text"
    }
  }  
}